# tecnicas-programacion
class Animal:
    def __init__(self, nombre):
        self.nombre = nombre

    def hablar(self):
        print(f"{self.nombre} hace un sonido.")

class Perro(Animal):
    def hablar(self):
        print(f"{self.nombre} dice: Â¡Guau!")

# Uso
mi_perro = Perro("Firulais")
mi_perro.hablar()
